
@model IEnumerable<Student>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Student" asp-action="Create">Create new customer</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Borrowed books count</th>
            <th>Edit customer</th>
            <th>Delete customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            <tr>
                <td>@std.Id</td>
                <td>@std.FirstName</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Student" asp-action="Update" asp-route-id="@std.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Student" asp-action="Delete" asp-route-id="@std.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>